import Flutter
import GoogleMaps
import UIKit

@main
@objc class AppDelegate: FlutterAppDelegate {
  override func application(
    _ application: UIApplication,
    didFinishLaunchingWithOptions launchOptions: [UIApplication.LaunchOptionsKey: Any]?
  ) -> Bool {
    // Leer API Key desde la configuración de Flutter
    let controller : FlutterViewController = window?.rootViewController as! FlutterViewController
    let channel = FlutterMethodChannel(name: "com.velocimetro/config",
                                       binaryMessenger: controller.binaryMessenger)
    
    channel.setMethodCallHandler({
      (call: FlutterMethodCall, result: @escaping FlutterResult) -> Void in
      if call.method == "getGoogleMapsApiKey" {
        // Por ahora usamos una variable de entorno de compilación
        // o un valor por defecto. En producción, usar xcconfig
        if let apiKey = ProcessInfo.processInfo.environment["GOOGLE_MAPS_API_KEY"] {
          result(apiKey)
        } else {
          result("") // Será cargado desde Flutter
        }
      }
    })
    
    // Inicializar con key vacía, se configurará desde Flutter
    GMSServices.provideAPIKey("")
    GeneratedPluginRegistrant.register(with: self)
    return super.application(application, didFinishLaunchingWithOptions: launchOptions)
  }
}
